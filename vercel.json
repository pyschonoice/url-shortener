{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" }
    },
    {
      "src": "backend/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    // proxy any /api/* to your Express handler
    { "src": "/(.*)", "dest": "backend/index.js" },
    // everything else â†’ your frontend
    { "src": "/(.*)",       "dest": "frontend/$1" }
  ]
}
